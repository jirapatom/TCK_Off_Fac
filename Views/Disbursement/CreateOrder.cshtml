@{ ViewBag.Title = "Overview"; }
@Scripts.Render("~/CreateOrder/js")
<link rel="stylesheet" href="~/Content/css/bootstrap-select/bootstrap-select.css">
<script src="~/Content/js/bootstrap-select/bootstrap-select.js"></script>
<script src="~/Content/js/dialog/sweetalert2.min.js"></script>
<script src="~/Content/js/animation/animation-active.js"></script>
<link rel="stylesheet" href="~/Content/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/css/animate.css" />
<link rel="stylesheet" href="~/Content/css/animation/animation-custom.css" />
<link rel="stylesheet" href="~/Content/css/dialog/sweetalert2.min.css">
<link rel="stylesheet" href="~/Content/css/dialog/dialog.css">
<body id="Body">
    <div class="row mg-t-10" style="display:none" id="FormCreateSR">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-element-list">
                <div class="cmp-tb-hd bcs-hd text-center">
                    <h2>สร้างใบเบิก</h2>
                    <p>สร้างเอกสารใบเบิก</p>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>หมายเลขครุภัณฑ์</i>
                            <div class="input-group  nk-int-st">
                                <input id="Prefix" type="text" class="form-control" placeholder="หมายเลขครุภัณฑ์" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>ชื่อครุภัณฑ์</i>
                            <div class="input-group  nk-int-st">
                                <input id="Item_Name" type="text" class="form-control" placeholder="ครุภัณฑ์" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>ประเภทครุภัณฑ์</i>
                            <div class="input-group  nk-int-st">
                                <input id="Type_Name" type="text" class="form-control" placeholder="ประเภทครุภัณฑ์" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>จำนวนคงเหลือ</i>
                            <div class="input-group  nk-int-st">
                                <input id="Use" type="text" class="form-control" placeholder="Qty" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 notification-demo">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>จำนวน </i><i style="color:red">**</i>
                            <div class="input-group  nk-int-st">
                                <input data-type="warning" id="Qty_Item" type="text" class="form-control" placeholder="กรอกจำนวน" onkeyup="this.value=this.value.replace(/[^0-9,.]/g,'')">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group nk-datapk-ctm form-elet-mg" id="data_1">
                            <i>วันที่ต้องการเบิกครุภัณฑ์</i>
                            <div class="input-group date nk-int-st">
                                <span class="input-group-addon"></span>
                                <input id="Date" type="text" class="form-control" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 notification-demo">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>Ref.</i>
                            <div class="input-group nk-int-st">
                                <input id="Ref" type="text" class="form-control" placeholder="กรอกเอกสารอ้างอิง" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 notification-demo">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>ผู้บันทึก</i><i style="color:red"> **</i>
                            <div class="input-group nk-int-st">
                                <input id="CO_User" type="text" class="form-control" placeholder="กรอกรหัสผู้บันทึก" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div id="Img" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mg-t-10 text-center">
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mg-t-10 text-center">
                        <a id="SaveCO" class="btn btn-success notika-btn-success">บันทึก</a>
                        <a href="@Url.Action("CreateOrder", new {})" id="Clear" class="btn btn-warning notika-btn-warning">Clear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="data-table-area mg-t-10">
        <div class="row">
            <div class="mg-t-10">
                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                    <div class="bootstrap-select fm-cmp-mg">
                        <select class="selectpicker" data-live-search="true" id="Type_Item" title='ค้นหาจากประเภทครุภัณฑ์...'>
                            @foreach (var TypeItem in ViewBag.TyItem)
                            {
                <option value="@TypeItem.Type_Code">@TypeItem.Type_Name</option>
}
                        </select>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12" hidden>
                    <div class="bootstrap-select fm-cmp-mg">
                        <select class="selectpicker" data-live-search="true" id="Name_Item" title='ค้นหาจากชื่อครุภัณฑ์...'>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">

                    <div class="basic-tb-hd" style="text-align:center">
                        <h2>เลือกรายการสร้างใบเบิก</h2>
                    </div>

                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>หมายเลขครุภัณฑ์</th>
                                    <th>ชื่อครุภัณฑ์</th>
                                    <th>ประเภทครุภัณฑ์</th>
                                    <th>Qty</th>
                                    <th>เบิกได้</th>
                                    <th>รูป</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>No.</th>
                                    <th>หมายเลขครุภัณฑ์</th>
                                    <th>ชื่อครุภัณฑ์</th>
                                    <th>ประเภทครุภัณฑ์</th>
                                    <th>Qty</th>
                                    <th>เบิกได้</th>
                                    <th>รูป</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
