@{
    ViewBag.Title = "";
}
@Scripts.Render("~/WarehouseR/js")
<link rel="stylesheet" href="~/Content/css/bootstrap-select/bootstrap-select.css">
<script src="~/Content/js/bootstrap-select/bootstrap-select.js"></script>
<script src="~/Content/js/dialog/sweetalert2.min.js"></script>
<script src="~/Content/js/animation/animation-active.js"></script>
<link rel="stylesheet" href="~/Content/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/css/animate.css" />
<link rel="stylesheet" href="~/Content/css/animation/animation-custom.css" />
<link rel="stylesheet" href="~/Content/css/dialog/sweetalert2.min.css">
<link rel="stylesheet" href="~/Content/css/dialog/dialog.css">
<body id="Body">
    <div class="row mg-t-10" style="">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-element-list">
                <div class="cmp-tb-hd bcs-hd text-center">
                    <h2>ลงทะเบียนครุภัณฑ์เข้าระบบ </h2> <i style="color:red">(สร้างข้อมูลครุภัณฑ์ พร้อมสร้าง Barcode)</i>
                    <p> </p>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>หมายเลขครุภัณฑ์</i><i style="color:red">**</i>
                            <div class="input-group  nk-int-st">
                                <input id="Item_No" type="text" class="form-control" placeholder="หมายเลขครุภัณฑ์">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>ชื่อครุภัณฑ์</i><i style="color:red">**</i>
                            <div class="input-group  nk-int-st">
                                <input id="Item_Name" type="text" class="form-control" placeholder="ชื่อครุภัณฑ์">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>รายละเอียดครุภัณฑ์</i><i style="color:red">**</i>
                            <div class="input-group  nk-int-st">
                                <input id="Item_Des" type="text" class="form-control" placeholder="รายละเอียดครุภัณฑ์">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>รหัสบาร์โค้ด</i>
                            <div class="input-group  nk-int-st">
                                <input id="BarCode" type="text" class="form-control" placeholder="" readonly value="@ViewBag.Barcode">

                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12" hidden>
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>Ref.</i>
                            <div class="input-group nk-int-st">
                                <input id="Ref" type="text" class="form-control" placeholder="กรอกเอกสารอ้างอิง" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>ครุภัณฑ์ของโรงงาน</i><i style="color:red">**</i>
                            <div class="bootstrap-select fm-cmp-mg">
                                <select class="selectpicker " data-live-search="true" id="Factory" title='เลือกรายชื่อโรงงาน...'>
                                    @foreach (var slFac in ViewBag.selectFac)
                                    {
                                        <option value="@slFac.Site_Code">@slFac.Site_Name</option>

                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>ประเภทครุภัณฑ์</i><i style="color:red"> **</i>
                            <div class="bootstrap-select fm-cmp-mg">
                                <select class="selectpicker " data-live-search="true" id="Type" title='เลือกประเภทครุภัณฑ์...'>
                                    @foreach (var slType in ViewBag.selectType)
                                    {
                                    <option value="@slType.Type_Code">@slType.Type_Name</option>

                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12 notification-demo">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>ผู้บันทึก</i><i style="color:red"> **</i>
                            <div class="input-group nk-int-st">
                                <input id="User" type="text" class="form-control" placeholder="กรอกรหัสผู้บันทึก" />
                            </div>
                        </div>
                    </div>


                    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group nk-datapk-ctm form-elet-mg">
                            <i>แนบรูป</i>
                            <div class="input-group  nk-int-st">
                                <form id="formUP" enctype="multipart/form-data">
                                    <input type="file" name="file" id="ImgUplode" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div id="Img" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mg-t-10 text-center">
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mg-t-10 text-center">
                        <a id="SaveSR" class="btn btn-success notika-btn-success">บันทึก</a>
                        <a href="@Url.Action("Receive", new {})" id="Clear" class="btn btn-warning notika-btn-warning">Clear</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
